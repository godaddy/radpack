{
  "version": "independent",
  "packages": [
    "packages/*",
    "examples/apps/*",
    "examples/clients/*",
    "examples/libs/*"
  ],
  "command": {
    "publish": {
      "private": false,
      "ignoreChanges": [
        "packages/**/*.md",
        "packages/*/test/**/*"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
