{
  "name": "@radpack/webpack-plugin",
  "version": "1.1.2",
  "description": "Rapid Application Development Packaging Webpack Plugin",
  "main": "./lib/index.cjs.js",
  "module": "./lib/index.esm.js",
  "exports": {
    ".": {
      "import": "./lib/index.esm.js",
      "require": "./lib/index.cjs.js"
    },
    "./loader": {
      "import": "./lib/loader.esm.js",
      "require": "./lib/loader.cjs.js"
    }
  },
  "files": [
    "lib/",
    "loader/"
  ],
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "rollup -c"
  },
  "homepage": "https://github.com/godaddy/radpack/tree/main/packages/webpack-plugin#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/godaddy/radpack.git",
    "directory": "packages/webpack-plugin"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@radpack/cli": "^1",
    "@radpack/client": "^1",
    "@radpack/core": "^1",
    "@radpack/server": "^1",
    "webpack": ">=4"
  },
  "peerDependenciesMeta": {
    "@radpack/cli": {
      "optional": true
    },
    "@radpack/client": {
      "optional": true
    },
    "@radpack/server": {
      "optional": true
    }
  },
  "dependencies": {
    "@radpack/build": "^1.0.5",
    "loader-utils": "^2.0.2",
    "webpack-sources": "^2.3.1"
  },
  "devDependencies": {
    "@radpack/core": "^1.0.5",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "webpack": "^5.88.2"
  },
  "license": "MIT"
}
